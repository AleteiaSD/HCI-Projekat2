            <RichTextBox Name="rtbEditor" Margin="0,0,0,10" Width="404" SelectionChanged="rtbEditor_SelectionChanged" KeyDown="RtbEditor_KeyDown"/>
        </DockPanel>

        <ToolBar Height="41" Width="1135" Canvas.Left="242" Canvas.Top="882" RenderTransformOrigin="0.5,0.5" >
            <ToolBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="1.406"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ToolBar.RenderTransform>
            <Button Name="new" ToolTip="New" Click="New_Click" >
                <Image Source="http://www.iconarchive.com/download/i95241/dtafalonso/modern-xp/ModernXP-26-Filetype-New.ico" Width="16" Height="16" />

            </Button>

            <Button Name="open" ToolTip="open" Click="Open_Click">
                <Image Source="https://icons-for-free.com/iconfiles/png/512/folder+open+icon-1320161390409087972.png" Width="16" Height="16" />
            </Button>
            <Separator/>
            <Button Name="save" ToolTip="Save" Click="Save_Click">
                <Image Source="http://www.yfamily.ru/iColoringPlugin/img/save.png" Width="16" Height="16" />
            </Button>
            <Separator/>
            <Button Name="saveas" ToolTip="Save as" Click="Saveas_Click">
                <Image Source="http://www.iconarchive.com/download/i42625/oxygen-icons.org/oxygen/Actions-document-save-all.ico" Width="16" Height="16" />
            </Button>
            <Separator/>
            <ToggleButton Command="EditingCommands.ToggleBold" x:Name="btnBold" Content="B"/>
            <Separator/>
            <ToggleButton Command="EditingCommands.ToggleItalic" Name="btnItalic" Content="I" />
            <Separator />
            <ToggleButton Command="EditingCommands.ToggleUnderline" Name="btnUnderline" Content="U" />
            <Separator />


            <ComboBox x:Name="cmbFontFamily" Width="150" SelectionChanged="cmbFontFamily_SelectionChanged"/>
            <Separator/>
            <ComboBox Name="cmbFontSize" Width="70" IsEditable="True" TextBoxBase.TextChanged="CmbFontSize_TextChanged"/>
            <Separator/>
            <ComboBox x:Name="cmbFontColor" Width="100" SelectionChanged="CmbFontColor_SelectionChanged" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Fill="{Binding Name}" Width="16" Height="16" Margin="0,2,5,2" />
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Separator/>
            <TextBox x:Name="findR"  TextWrapping="Wrap" Text="" Foreground="Gray" VerticalAlignment="Center" Width="100"/>
            <TextBox x:Name="replace"   TextWrapping="Wrap" Text="" Foreground="Gray" VerticalAlignment="Center" Width="100"/>
            <Button x:Name="ReplaceButton" Content="Replace"   VerticalAlignment="Center" Width="58" Click="ReplaceButton_Click"/>
            <Separator />
            <Button x:Name="buttonDT"  VerticalAlignment="Center"  Click="ButtonDT_Click" Height="32" Width="30" Margin="0,2"  >
                <Image Height="31"  Source="https://p1.hiclipart.com/preview/597/835/651/simply-styled-icon-set-731-icons-free-date-and-time-calendar-and-time-schedule-icon-png-clipart.jpg" Width="27" >

                </Image>
            </Button>

