        <StatusBar Height="22" Canvas.Left="540" Canvas.Top="701" Width="357"  >
            <StatusBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.003"/>
                    <TranslateTransform/>
                </TransformGroup>
            </StatusBar.RenderTransform>
            <StatusBarItem Background="#FFDBECE7" Width="170">
                <TextBox x:Name="textBox" IsReadOnly="True" TextWrapping="Wrap" Text="" Width="96" BorderBrush="Transparent" Background="Transparent" Height="23" RenderTransformOrigin="0.5,0.517" HorizontalAlignment="Left" VerticalAlignment="Top"  />
            </StatusBarItem>
            <Separator/>
            <StatusBarItem Width="413" Background="#FFDBECE7">
                <TextBlock Name="lblCursorPosition"  Width="150"/>
            </StatusBarItem>
        </StatusBar>

        <Button  Width="38" Height="38" Content="X" RenderTransformOrigin="7.938,3.374" Canvas.Left="1081" Canvas.Top="251" FontSize="24" FontFamily="Arial" FontWeight="Bold" Background="{x:Null}" Foreground="#FFF3FF00" Click="Button_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Ellipse Fill="#FF5D5D5D"/>
                        <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
       
